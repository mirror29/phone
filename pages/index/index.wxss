/**index.wxss**/

.top-view {
  display: flex;
  justify-content: space-between;
}

.top-left {
  display: flex;
  align-items: center;
}

.top-left image {
  height: 40rpx;
  width: 35rpx;
  margin: 0 10rpx;
}

.separate {
  margin: 0 16rpx;
  color: #c5c5c5;
}

.edit {
  display: flex;
  align-items: center;
}

.edit text {
  color: #1196db;
  font-size: 26rpx;
}

.edit image {
  height: 18rpx;
  width: 22rpx;
}

.top-right {
  display: flex;
  flex-direction: column;
  background-color: #ec6120;
  text-align: center;
  padding: 7rpx 70rpx;
}

.top-right text {
  font-size: 24rpx;
  color: #fff;
  /* margin: 1rpx; */
}

.contentWarp {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 200rpx;
  left: 0;
  bottom: 0;
  right: 0;
  margin: auto;
  background-color: #efefef;
  padding-top: 40rpx;
}

.touchWrap {
  transform-origin: center;
  position: absolute;
  z-index: 100;
}

.imgWrap {
  box-sizing: border-box;
  width: 100%;
  transform-origin: center;
  float: left;
  border: 5rpx transparent dashed;
}

.imgWrap image {
  float: left;
}

.touchActive .x {
  display: block;
}

.touchActive .o {
  display: block;
}

.x {
  position: absolute;
  top: -25rpx;
  left: -25rpx;
  z-index: 500;
  display: none;
  width: 50rpx;
  height: 50rpx;
  overflow: hidden;
  font-weight: bold;
  color: #efefef;
}

.o {
  position: absolute;
  bottom: -25rpx;
  right: -25rpx;
  width: 50rpx;
  height: 50rpx;
  text-align: center;
  display: none;
  overflow: hidden;
  font-weight: bold;
  color: #efefef;
}

.active {
  background-color: rgb(78, 114, 151);
}

.active view {
  border: none;
}

.touchActive {
  /* border: 4rpx #fff dashed; */
  z-index: 400;
}

.swiper-tab {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  border-bottom: 2rpx solid #d0d0d0;
  text-align: center;
  line-height: 80rpx;
}

.swiper-tab-list {
  font-size: 30rpx;
  display: inline-block;
  width: 50%;
  color: #272727;
}

.on {
  color: #f16d30;
}

.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
}

.swiper-box view {
  text-align: center;
}
.canvas-view{
  padding-top: 40rpx;
  width: 375rpx;
  margin: 0 auto;
  position: relative;
}

.camera{
  position: absolute;
  top: 80rpx;
  left: 40rpx;
  width: 55rpx;
  height: 120rpx;
  z-index: 999;
}

.scroll-view_H{
  position: fixed;
  bottom: 140rpx;
  background-color: #fff;
  display: flex;
  white-space: nowrap; 
  margin: 0 10rpx;
  padding: 10rpx;
}

.scroll-view-item{
  display: inline-block;
  /* background-color: #fff; */
  margin: 0 10rpx;
  position: relative;
  padding-top: 18rpx;
}
.scroll-view-item .imgItem{
  width: 120rpx;
  height: 120rpx;
  border-radius: 5px;
}
.scroll-view-item .add{
  width: 120rpx;
  height: 120rpx;
  border-radius: 5px;
}

.del{
  position: absolute;
  right: -8rpx;
  top: 2rpx;
  height: 30rpx;
  width: 30rpx;
}

.container {
  height: 100%;
  min-height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.title {
